set -e +o pipefail

readonly SIZE_REPORT_FILE=/tmp/size_report

size_report_init()
{
    [[ "${TRAVIS_PULL_REQUEST}" != false ]]

    REPO_SLUGS=(${TRAVIS_REPO_SLUG//\// })

    cat > "${SIZE_REPORT_FILE}" <<EOF
{
  "name": "$1",
  "number": ${TRAVIS_PULL_REQUEST},
  "commit_id": "${TRAVIS_PULL_REQUEST_SHA}",
  "base_commit_id": "${MERGE_BASE_SHA}",
  "base_branch": "${TRAVIS_BRANCH}",
  "owner": "${REPO_SLUGS[0]}",
  "repo": "${REPO_SLUGS[1]}",
  "data": [{
EOF
}

size_report_size()
{
    [[ "${TRAVIS_PULL_REQUEST}" != false ]]

    name="$(basename $1)"

    [[ "${name}" = "$(basename $2)" ]] || return

    cat >> "${SIZE_REPORT_FILE}" <<EOF
    "name": "$name",
    "type": "size",
    "base": [$(size "$1" | awk '{text+=$1} {bss+=$2} {data+=$3} {total+=$4} END {printf "%d,%d,%d,%d", text, bss, data, total}')],
    "pr": [$(size "$2" | awk '{text+=$1} {bss+=$2} {data+=$3} {total+=$4} END {printf "%d,%d,%d,%d", text, bss, data, total}')]
  },{
EOF
}

size_report_post()
{
    [[ "${TRAVIS_PULL_REQUEST}" != false ]] || return 0

    echo -e "  }]\n}" >> "${SIZE_REPORT_FILE}"
    curl -X POST \
        -H "Content-Type: application/json" \
        -d @"${SIZE_REPORT_FILE}" \
        "${SIZE_REPORT_URL}/review"
}

main()
{
    case $1 in
        init)
            shift
            size_report_init "$@"
            ;;

        size)
            shift
            size_report_size "$@"
            ;;

        post)
            size_report_post
            ;;
    esac
}

main "$@"
